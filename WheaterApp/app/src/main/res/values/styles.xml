<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="BasicSizeAndColor">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_city</item>
    </style>

    <style name="SplashScreenBottomText">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_bottom_splash_activity</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CityAndCountryStyle">
        <item name="android:textSize">@dimen/text_size_details_activity_cityAndCountryStyle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TempStyle">
        <item name="android:textSize">@dimen/text_size_details_activity_tempStyle</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
